{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Vaccination Rate",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/WenTanZac0625/FIT3179/main/js/world_map.geom.json",
      "format": {"type": "topojson","feature": "world.geo"}
    },
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in' + datum.properties.geounit", "as": "note"}
         ],
         "mark":{"type": "geoshape", "fill":"lightgray", "stroke":"white"},
         "encoding":{"tooltip":{"field":"note"}}
      },
      {
        "transform": [
          {"lookup": "properties.geounit",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/WenTanZac0625/FIT3179/main/data/Total_vaccination.csv"
            },
            "key": "COUNTRY",
            "fields": ["TOTAL_VACCINATIONS"]
          }
        }
      ],

    "projection": {"type": "equirectangular"},
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "TOTAL_VACCINATIONS",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [100000, 500000, 1000000, 15000000]
          }
      },
      "tooltip": [
        {"field": "properties.geounit", "type": "nominal", "title": "Country"},
        {"field": "TOTAL_VACCINATIONS", "type": "quantitative"}
      ]
    }
  }    
]
}



  